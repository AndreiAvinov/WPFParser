<Window x:Class="Lab2.ChangesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="ChangesWindow" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" MinHeight="34"></RowDefinition>
            <RowDefinition Height="374*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="Added_List" Margin="0,0,0,0" IsSynchronizedWithCurrentItem="True" Grid.Column="0" Grid.Row="1"/>
        <Label Content="Добавлено" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0"/>
        <ListBox x:Name="Deleted_List" Margin="0,0,0,0" IsSynchronizedWithCurrentItem="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Удалено" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="0"/>
    </Grid>
</Window>
